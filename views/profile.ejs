<!-- views/profile.ejs -->

<!doctype html>
<html>
<head>
    <title>Flickr Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-camera-retro fa-2x"></span> Image Folder</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-primary"><span class="fa fa-flickr"></span> Flickr</h3>

                    <p>
                        <strong>id</strong>: <%= user.flickr.id %><br>
                        <strong>token</strong>: <%= user.flickr.token %><br>
                        <strong>email</strong>: <%= user.flickr.displayName %><br>
                        <strong>name</strong>: <%= user.flickr.name %>
                    </p>

            </div>
        </div>

    </div>

</div>
</body>
</html>